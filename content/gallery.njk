---
layout: layouts/home.njk
eleventyNavigation:
  key: Gallery
  order: 3
pagination:
  data: gallery
  size: 9
---
{%- css %}{% include "public/css/gallery.css" %}{%- endcss %}
{%- css %}{% include "public/css/cssbox.css" %}{%- endcss %}

{% set number = 1 %}
<ol class="gallerylist">
{% for item in gallery %}
  <li>
    <span class="cssbox">
      <a id="image{{number}}" href="#image{{number}}"><img class="cssbox_thumb" src="{{item.url}}">
        <span class="cssbox_full">{% image "../public" + item.url, item.alt, [500, auto], [500, auto] %}</span>
      </a>
      <a class="cssbox_close" href="#void"></a>
      {% if number > 1 %}
      <a class="cssbox_prev" href="#image{{number - 1}}">&lt;</a>
      {% endif %}
		  {% if number < gallery.length %}
      <a class="cssbox_next" href="#image{{number + 1}}">&gt;</a>
      {% endif %}
    </span>
  </li>
  {% set number = number + 1 %}
{% endfor %}
</ol>